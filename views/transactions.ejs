<!-- views/transactions.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transactions</title>
</head>
<body>
    <h1>Transactions</h1>
    
    <% if (transactions.length > 0) { %>
        <table>
            <thead>
                <tr>
                    <th>Producer</th>
                    <th>Affiliate</th>
                    <th>Value</th>
                </tr>
            </thead>
            <tbody>
                <% transactions.forEach(transaction => { %>
                    <tr>
                        <td><%= transaction.producer %></td>
                        <td><%= transaction.affiliate %></td>
                        <td><%= transaction.value %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>

        <p>Total value of transactions: <%= transactions.reduce((acc, curr) => acc + curr.value, 0) %></p>
    <% } else { %>
        <p>No transactions available.</p>
    <% } %>
    
    <a href="/">Back to Upload</a>
</body>
</html>
